{
  "name": "@dvcol/traktv-companion",
  "version": "0.0.0",
  "title": "Side Trakt (companion app for Traskt.tv)",
  "description": "Side Trakt, a chrome extension for Trakt.tv",
  "license": "MIT",
  "author": "dvcol",
  "homepage": "https://github.com/dvcol/traktv-companion",
  "bugs": "https://github.com/dvcol/traktv-companion/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/dvcol/traktv-companion.git"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">= 6.32.0"
  },
  "scripts": {
    "prepare": "husky install",
    "clear": "rimraf dist",
    "dist": "pnpm run clear && esno scripts/prepare.ts",
    "serve": "vite",
    "dev": "cross-env NODE_ENV=development run-p dist serve",
    "build": "cross-env NODE_ENV=production pnpm run dist && vue-tsc --noEmit && vite build",
    "test:unit": "vitest run --environment jsdom --coverage",
    "test:watch": "vitest --environment jsdom",
    "typecheck": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "release": "standard-version",
    "release:changelog": "extract-changelog-release > RELEASE.md"
  },
  "dependencies": {
    "@dvcol/web-extension-utils": "^2.3.3",
    "pinia": "^2.0.33",
    "vue": "^3.2.47",
    "vue-router": "^4.1.6",
    "vuetify": "^3.1.11"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.5.0",
    "@commitlint/config-conventional": "^17.4.4",
    "@dvcol/eslint-plugin-presets": "^1.3.3",
    "@dvcol/stylelint-plugin-presets": "^1.1.1",
    "@types/chrome": "^0.0.225",
    "@types/fs-extra": "^11.0.1",
    "@types/jsdom": "^21.1.0",
    "@types/node": "^18.15.5",
    "@types/webextension-polyfill": "^0.10.0",
    "@vitejs/plugin-vue": "^4.1.0",
    "@vue/test-utils": "^2.3.2",
    "@vue/tsconfig": "^0.1.3",
    "c8": "^7.13.0",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.36.0",
    "esno": "^0.16.3",
    "extract-changelog-release": "^1.0.2",
    "fs-extra": "^11.1.0",
    "husky": "^8.0.3",
    "jsdom": "^21.1.1",
    "lint-staged": "^13.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.4",
    "rimraf": "^4.4.0",
    "rollup": "^3.19.1",
    "sass": "^1.59.3",
    "standard-version": "^9.5.0",
    "stylelint": "^15.3.0",
    "typescript": "^5.0.2",
    "vite": "^4.2.1",
    "vite-plugin-vuetify": "^1.0.2",
    "vitest": "^0.29.7",
    "vue-tsc": "^1.2.0",
    "webextension-polyfill": "^0.10.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue,svelte,json,md}": [
      "eslint --fix"
    ],
    "*.{css,scss,less,vue,svelte}": [
      "stylelint --fix"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/plugin-syntax-flow",
        "@babel/plugin-transform-react-jsx",
        "svelte"
      ],
      "allowedVersions": {
        "stylelint": ">=15"
      }
    }
  }
}
