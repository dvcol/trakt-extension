{
  "name": "@dvcol/traktv-companion",
  "version": "0.0.0",
  "description": "A basic chrome extension for trakt.tv",
  "author": "dvcol",
  "license": "MIT",
  "homepage": "https://github.com/dvcol/traktv-companion",
  "bugs": "https://github.com/dvcol/traktv-companion/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/dvcol/traktv-companion.git"
  },
  "engines": {
    "node": ">=16",
    "pnpm": ">= 6.32.0"
  },
  "scripts": {
    "prepare": "husky install",
    "dev": "vite",
    "prod": "vite preview --port 5050",
    "build": "vue-tsc --noEmit && vite build",
    "test:unit": "vitest run --environment jsdom --coverage",
    "test:wartch": "vitest --environment jsdom",
    "typecheck": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --ignore-path .gitignore",
    "lint:fix": "pnpm run lint --fix",
    "release": "standard-version",
    "release:changelog": "extract-changelog-release > RELEASE.md"
  },
  "dependencies": {
    "@dvcol/web-extension-utils": "^1.1.1",
    "pinia": "^2.0.13",
    "vue": "^3.2.33",
    "vue-router": "^4.0.14"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.0",
    "@commitlint/config-conventional": "^17.0.0",
    "@dvcol/eslint-plugin-presets": "^1.2.1",
    "@dvcol/stylelint-plugin-presets": "^1.1.0",
    "@types/chrome": "^0.0.188",
    "@types/jsdom": "^16.2.14",
    "@types/node": "^16.11.27",
    "@vitejs/plugin-vue": "^2.3.1",
    "@vue/test-utils": "^2.0.0-rc.20",
    "@vue/tsconfig": "^0.1.3",
    "c8": "^7.11.2",
    "eslint": "^8.5.0",
    "extract-changelog-release": "^1.0.2",
    "husky": "^8.0.0",
    "jsdom": "^19.0.0",
    "prettier": "^2.5.1",
    "standard-version": "^9.3.2",
    "stylelint": "^14.8.1",
    "typescript": "~4.7.0",
    "vite": "^2.9.5",
    "vitest": "^0.14.0",
    "vue-tsc": "^0.37.0"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/plugin-syntax-flow",
        "@babel/plugin-transform-react-jsx"
      ],
      "allowedVersions": {
        "stylelint": "^14.0.0"
      }
    }
  }
}
