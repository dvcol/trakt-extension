{
  "name": "@dvcol/trakt-extension",
  "version": "0.0.0",
  "title": "Side Trakt (companion app for Trakt.tv)",
  "description": "Side Trakt, a chrome extension for Trakt.tv",
  "license": "MIT",
  "author": "dvcol",
  "homepage": "https://github.com/dvcol/trakt-extension",
  "bugs": "https://github.com/dvcol/trakt-extension/issues",
  "repository": {
    "type": "git",
    "url": "https://github.com/dvcol/trakt-extension.git"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">= 8"
  },
  "scripts": {
    "prepare": "husky install",
    "clear": "rimraf dist",
    "dist": "pnpm run clear && esno scripts/prepare.ts",
    "serve": "vite",
    "dev": "cross-env NODE_ENV=development run-p dist serve",
    "build": "cross-env NODE_ENV=production pnpm run dist && vue-tsc --noEmit && vite build",
    "test:unit": "vitest run --environment jsdom --coverage",
    "test:watch": "vitest --environment jsdom",
    "typecheck": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint .",
    "lint:fix": "pnpm run lint --fix",
    "style": "stylelint src/**/*.{vue,css,scss,less,html}",
    "style:fix": "yarn style --fix",
    "release": "standard-version",
    "release:changelog": "extract-changelog-release > RELEASE.md"
  },
  "dependencies": {
    "@dvcol/web-extension-utils": "^2.3.4",
    "pinia": "^2.1.6",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "vuetify": "^3.3.14"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@dvcol/eslint-plugin-presets": "^1.3.9",
    "@dvcol/stylelint-plugin-presets": "^1.2.1",
    "@tsconfig/node20": "^20.1.2",
    "@types/chrome": "^0.0.243",
    "@types/fs-extra": "^11.0.1",
    "@types/jsdom": "^21.1.2",
    "@types/node": "^20.5.3",
    "@types/webextension-polyfill": "^0.10.2",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vitejs/plugin-vue": "^4.3.3",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "@vue/test-utils": "^2.4.1",
    "@vue/tsconfig": "^0.4.0",
    "c8": "^8.0.1",
    "chokidar": "^3.5.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.47.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-html": "^7.1.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsonc": "^2.9.0",
    "eslint-plugin-markdown": "^3.0.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vitest": "^0.2.8",
    "eslint-plugin-vue": "^9.17.0",
    "eslint-plugin-vuejs-accessibility": "^2.2.0",
    "eslint-plugin-yml": "^1.0.0",
    "esno": "^0.17.0",
    "extract-changelog-release": "^1.0.2",
    "fs-extra": "^11.1.1",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "jsonc-eslint-parser": "^2.1.0",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "rollup": "^3.28.1",
    "sass": "^1.66.1",
    "standard-version": "^9.5.0",
    "stylelint": "^15.10.3",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vite-plugin-vuetify": "^1.0.2",
    "vitest": "^0.34.2",
    "vue-tsc": "^1.8.8",
    "webextension-polyfill": "^0.10.0",
    "yaml-eslint-parser": "^1.0.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue,svelte,json,md}": [
      "eslint --fix"
    ],
    "*.{css,scss,less,vue,svelte}": [
      "stylelint --fix"
    ]
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/plugin-syntax-flow",
        "@babel/plugin-transform-react-jsx",
        "svelte"
      ],
      "allowedVersions": {
        "stylelint": ">=15"
      }
    }
  }
}
